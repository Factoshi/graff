{
    "name": "factom-graph",
    "version": "0.1.0",
    "description": "GraphQL translation layer for the factomd RPC API.",
    "main": "index.js",
    "scripts": {
        "start": "node ./build/server.js",
        "build": "tsc",
        "test": "nyc mocha src/**/*.spec.js",
        "generate": "graphql-codegen --config codegen.yml",
        "generate-init": "graphql-codegen init"
    },
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporter": [
            "text",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Factoshi/factom-graph.git"
    },
    "keywords": [
        "factom",
        "api",
        "graphql"
    ],
    "author": "Alex Carrithers (Factoshi Ltd)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Factoshi/factom-graph/issues"
    },
    "homepage": "https://github.com/Factoshi/factom-graph#readme",
    "devDependencies": {
        "@graphql-codegen/cli": "^1.3.1",
        "@graphql-codegen/typescript": "1.2.0",
        "@graphql-codegen/typescript-resolvers": "1.2.0",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "mocha": "^6.1.4",
        "nyc": "^14.1.1",
        "source-map-support": "^0.5.12",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.2"
    },
    "dependencies": {
        "@types/graphql": "^14.2.2",
        "apollo-server": "^2.6.7",
        "dataloader": "^1.4.0",
        "factom": "^1.2.4",
        "graphql": "^14.4.0",
        "graphql-import": "^0.7.1"
    }
}
